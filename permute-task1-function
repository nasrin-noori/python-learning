t = input('enter your preferred string: ')
s = input('enter your shorter string: ')

def permute(data, i, length, result):
    if i == length:
        result.append(''.join(data))
    else:
        for j in range(i, length):
            # swap
            data[i], data[j] = data[j], data[i]
            permute(data, i + 1, length, result)
            data[i], data[j] = data[j], data[i]

result = []
permute(list(s), 0, len(s), result)

def asses_logic(export):
    for k in range(0, len(export)):
        if s.find(export[k]) != -1:
            print('I found the permutation of', s, 'in longer string which is:', export[k])
            return
    print('I didnt found anything ')

asses_logic(result)
