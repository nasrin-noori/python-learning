t = input('enter your preferred string: ')
s = input('enter your shorter string: ')

def permute(data, i, length):
    result = []  

    def permute_helper(data, i, length):
        if i == length:
            result.append(''.join(data))
        else:
            for j in range(i, length):
                # swap
                data[i], data[j] = data[j], data[i]
                permute_helper(data, i + 1, length)
                data[i], data[j] = data[j], data[i]

    permute_helper(data, i, length)
    return result

def asses_logic(export, search_string):
    for k in range(0, len(export)):
        if search_string.find(export[k]) != -1:
            print('I found the permutation of', search_string, 'in the longer string, which is:', export[k])
            indicator=1
    if indicator!=1:
        print('NO permutation found')
result = permute(list(s), 0, len(s))
asses_logic(result,s)
